FROM python:3.10-slim

# Install dependencies
RUN pip install \
    dagster \
    dagster-docker \
    loguru \
    python-dotenv

WORKDIR /opt/dagster/app

# Copy code
COPY my_module/ /opt/dagster/app/my_module/
COPY loguru_bridge.py /opt/dagster/app/

# Set environment for Dagster+
ENV DAGSTER_CURRENT_IMAGE="harold-symons/dagster-loguru-demo:latest"

EXPOSE 4000

CMD ["dagster", "code-server", "start", "-h", "0.0.0.0", "-p", "4000", "-m", "my_module"]
