{
  "compilerOptions": {
    "paths": {
      "@dagster-io/ui-core/*": ["../ui-core/src/*"],
      "@dagster-io/ui-components": ["../ui-components/src"],
      "@dagster-io/ui-components/editor": ["../ui-components/src/editor"],
      "@dagster-io/dg-docs-components/*": ["../dg-docs-components/src/*"],
      "shared/*": ["../ui-core/src/*"]
    },
    "module": "esnext",
    "target": "es2022",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "allowUnreachableCode": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "incremental": true
  },
  "include": ["src", "typings.d.ts", "next-env.d.ts"],
  "exclude": ["node_modules"]
}
